<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane style="-fx-background-color:#f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sl2425.da.sellersapp.Controllers.MainView1Controller">

    <!-- Outer container -->
    <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">

        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20 20 40 20; -fx-background-color: #e0e0e0; -fx-border-color: #b0b0b0; -fx-border-width: 1;">
            <Label text="Your Data" style="-fx-font-size: 2.5em; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        </VBox>

        <!-- Main content layout -->
        <GridPane hgap="15" vgap="20" alignment="CENTER" style="-fx-padding: 20;">

            <!-- Labels and TextFields -->
            <Label style="-fx-font-size: 1.5em;" text="CIF: *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="cifField" promptText="Enter CIF" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;
                -fx-background-color: #d3d3d3; -fx-opacity: 0.8;" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 1.5em;" text="Name: *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Enter Name" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 1.5em;" text="Business Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="businessNameField" promptText="Enter Business Name" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-size: 1.5em;" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" promptText="Enter Phone" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label style="-fx-font-size: 1.5em;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" promptText="Enter Email" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label style="-fx-font-size: 1.5em;" text="URL:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="urlField" promptText="Enter Url" editable="false" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label style="-fx-font-size: 1.5em;" text="Password: *" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <PasswordField fx:id="passwordField" promptText="Enter Password" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label style="-fx-font-size: 1.5em;" text="Confirm Password: *" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <PasswordField fx:id="confirmPassField" promptText="Enter Password" style="-fx-font-size: 1.5em; -fx-background-radius: 5; -fx-border-color: #ccc;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        </GridPane>

        <!-- Confirm Button -->
        <Button fx:id="confirmButton" text="Confirm" style="-fx-font-size: 1.8em; -fx-background-color: #4CAF50; -fx-text-fill: white;
    -fx-padding: 10 20; -fx-border-radius: 5; -fx-background-radius: 5;" />

    </VBox>
</StackPane>
