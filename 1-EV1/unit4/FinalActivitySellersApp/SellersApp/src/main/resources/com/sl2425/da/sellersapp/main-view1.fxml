<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane alignment="CENTER" style="-fx-background-color: #d3d3d3;" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sl2425.da.sellersapp.Controllers.MainView1Controller">
    <VBox spacing="10" style="-fx-background-color: #f0f0f0;" StackPane.alignment="CENTER">

        <!-- Title Label at the top -->
        <Label maxWidth="Infinity" prefHeight="35.0" style="-fx-font-size: 2em; -fx-font-weight: bold; -fx-alignment: center;; -fx-text-alignment: center; -fx-alignment: center;; -fx-alignment: center;" text="Seller Data" VBox.vgrow="NEVER">
         <padding>
            <Insets top="5.0"/>
         </padding></Label>

        <!-- Main content layout -->
        <GridPane hgap="10" style="-fx-padding: 10;" vgap="10" VBox.vgrow="ALWAYS">

            <!-- Labels and TextFields -->
            <Label style="-fx-font-size: 1.5em;" text="CIF:  *" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="cifField" promptText="Enter CIF" style="-fx-font-size: 1.5em; -fx-background-color: #d3d3d3; -fx-opacity: 0.8;" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 1.5em;" text="Name:  *" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" promptText="Enter Name" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 1.5em;" text="Business Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="businessNameField" promptText="Enter Business Name" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-size: 1.5em;" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" promptText="Enter Phone" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label style="-fx-font-size: 1.5em;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" promptText="Enter Email" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label style="-fx-font-size: 1.5em;" text="Password:  *" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <PasswordField fx:id="passwordField" promptText="Enter Password" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <!-- Confirm Button -->
            <Button fx:id="confirmButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 1.5em; -fx-alignment: center;" text="Confirm" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" />

            <!-- Column and Row Constraints -->
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
                <RowConstraints minHeight="40.0" vgrow="ALWAYS" />
            </rowConstraints>
        </GridPane>
    </VBox>
</StackPane>


