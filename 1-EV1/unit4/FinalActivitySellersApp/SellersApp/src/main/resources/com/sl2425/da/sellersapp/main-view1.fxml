<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="195.0" prefWidth="451.0" spacing="10" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">

        <!-- Title Label at the top -->
        <Label prefHeight="35.0" prefWidth="450.0" style="-fx-font-size: 2em; -fx-font-weight: bold;" text="Seller Data" />

        <!-- Main content layout -->
        <GridPane hgap="10" prefHeight="568.0" prefWidth="451.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;" vgap="10" GridPane.vgrow="ALWAYS">

            <!-- Labels and TextFields -->
            <Label style="-fx-font-size: 1.5em;" text="CIF:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="inputField1" promptText="Enter CIF" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 1.5em;" text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="inputField2" promptText="Enter Name" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 1.5em;" text="Business Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="inputField3" promptText="Enter Business Name" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-size: 1.5em;" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="inputField4" promptText="Enter Phone" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label style="-fx-font-size: 1.5em;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="inputField5" promptText="Enter Email" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label style="-fx-font-size: 1.5em;" text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="inputField6" promptText="Enter Password" style="-fx-font-size: 1.5em;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Confirm Button -->
            <Button style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 1.5em; -fx-alignment: center;" text="Confirm" GridPane.columnSpan="2" GridPane.rowIndex="6" />

            <!-- Column and Row Constraints -->
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="ALWAYS" />
            </rowConstraints>
        </GridPane>
    </VBox>
</StackPane>
