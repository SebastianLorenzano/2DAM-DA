<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.sl2425.da.sellersapp.Controllers.MainView2Controller">

    <!-- Title Label -->
    <Label text="Add to store" style="-fx-font-size: 2.5em; -fx-font-weight: bold; -fx-text-fill: #333333;" />

    <!-- Form Grid -->
    <GridPane hgap="10" vgap="15">
        <!-- Column Constraints -->
        <columnConstraints>
            <ColumnConstraints minWidth="100" halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200" />
        </columnConstraints>

        <!-- Category Label and ComboBox -->
        <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 1.5em;" />
        <ComboBox fx:id="categoryBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- Product Label and ComboBox -->
        <Label text="Product:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 1.5em;" />
        <ComboBox fx:id="productBox" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Stock Label, Slider, and Units Label -->
        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 1.5em;" />
        <HBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <Slider fx:id="stockSlider" min="0" max="25" majorTickUnit="5" minorTickCount="4" showTickLabels="true" showTickMarks="true" />
            <Label text="Units" style="-fx-font-size: 1.5em;" />
        </HBox>

        <!-- Price Label and TextField -->
        <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 1.5em;" />
        <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>

    <!-- Add Button -->
    <Button text="Add" fx:id="addButton" style="-fx-font-size: 1.5em; -fx-background-color: #e0e0e0;" />
</VBox>
